{{!
    @template mod_unilabel/setting_configselect
    Template to show a dropdown select box with graphical icons for the custom buttons.

    Example context (json):
    {
        "id": "idjjfldsfxy_fjsdlf",
        "name": "fjlsdjflsdf",
        "values": [
            {
                "value": 0,
                "title": "Design"
            },
            {
                "value": 1,
                "title": "\\f105"
            },
            {
                "value": 2,
                "title": "\\f101"
            },
            {
                "value": 3,
                "title": "\\f04e"
            },
            {
                "value": 4,
                "title": "\\f0da",
                "checked": "checked"
            },
            {
                "value": 5,
                "title": "\\f0a4"
            },
            {
                "value": 6,
                "title": "\\f061"
            },
            {
                "value": 7,
                "title": "\\f0a9"
            },
            {
                "value": 8,
                "title": "\\f18e"
            }
        ],
        "currentvalue": 4
    }
}}
<style>
    button#btn-{{id}} {
        /*width: 280px;*/
        overflow: hidden;
    }
    div#dd-{{id}} {
        min-width: 0;
    }

    div#dd-{{id}} .dropdown-item input[type="radio"] + label {
        margin-bottom: 0;
    }

    div#dd-{{id}} .dropdown-item.checked,
    div#dd-{{id}} .dropdown-item:hover,
    div#dd-{{id}} .dropdown-item:focus {
        background-color: #0078D7;
        color: #ffffff;
    }
    div#dd-{{id}} label span::after {
        font-family: FontAwesome;
        font-weight: normal;
        font-size: 15px;
    }

    #btn-{{id}} span::after {
        font-family: FontAwesome;
        font-weight: normal;
        font-size: 25px;
    }
    {{#values}}
        div#dd-{{id}} label span.button-{{value}}::after,
        #btn-{{id}} span.button-{{value}}::after {
            content:'{{title}}';
        }
    {{/values}}
</style>
<div class="dropdown">
    <button type="button" id="btn-{{id}}" class="btn py-0 my-0 pr-2 border dropdown-toggle" data-toggle="dropdown">
        <span class="button-{{currentvalue}}"></span>
    </button>
    <div id="dd-{{id}}" class="dropdown-menu">
        {{#values}}
            <div class="dropdown-item px-2{{#checked}} checked{{/checked}}">
                <input class="d-none" type="radio" id="{{name}}_{{value}}" name="{{name}}" value="{{value}}"{{#checked}} checked="checked"{{/checked}}>
                <label class="w-100" for="{{name}}_{{value}}">
                    <span class="button-{{value}}"></span>
                </label>
            </div>
        {{/values}}
    </div>
</div>
{{#js}}
require(['mod_unilabel/dropdown_radio'], function(mod) {
    mod.init("{{id}}");
});
{{/js}}

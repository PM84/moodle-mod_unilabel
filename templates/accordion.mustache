{{!
    @template unilabeltype_accordion/accordion
}}

{{#showintro}}
    {{{intro}}}
{{/showintro}}

<div class="accordion" id="accordion-{{uniqid}}">
{{#segments}}
  <div class="card">
    <div class="card-header" id="accordion-heading-{{uniqid}}-{{id}}">
      <h2 class="mb-0">
        <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#accordion-segment-{{uniqid}}-{{id}}" aria-expanded="false" aria-controls="accordion-segment-{{uniqid}}-{{id}}">
          {{{ heading }}}
        </button>
      </h2>
    </div>

    <div id="accordion-segment-{{uniqid}}-{{id}}" class="collapse" aria-labelledby="accordion-heading-{{uniqid}}-{{id}}" data-parent="#accordion-{{uniqid}}">
      <div class="card-body">
        {{{ content }}}
      </div>
    </div>
  </div>
{{/segments}}
</div>